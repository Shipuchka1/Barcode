@model IEnumerable<Exhibition.Models.City>

@{
    ViewBag.Title = "GetCities";
}

<h2>GetCities</h2>

<p>
    @Html.ActionLink("Add", "AddCity")
</p>
<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Страна
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>@item.Name</td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Country.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "AddCity", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteCity", new { id = item.Id })
        </td>
    </tr>
}

</table>
